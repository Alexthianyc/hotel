<style>
  .parallax {
    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .icon {
  }
  section {
    width: 100%;
    height: 100vh;
  }
  .twoSpaces {
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 100vh;
  }
  @media (max-width: 1024px) {
    .twoSpaces {
      grid-template-columns: 1fr;
      height: 200vh;
    }
    .h-vh100 {
      height: 100vh;
    }
  }
  .center {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .text-top {
    color: white;
    font-size: 10rem;
    font-weight: bold;
    font-family: "Oswald", sans-serif;
  }
  @media (max-width: 768px) {
    .text-top {
      font-size: 7rem;
    }
  }

  /* Estilos para la secci√≥n de las normas de la casa */
  .spacing {
    padding: 2rem;
  }
  h2 {
    font-family: "Oswald", sans-serif;
    font-size: 1.5rem;
    color: #333;
    margin: 1rem 0;
  }
  .house-rules {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: auto;
    padding: 2rem;
  }
  .rule {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease;
  }
  .rule:hover {
    background-color: #f1f1f1;
  }
  .icon {
    font-size: 1.8rem;
    margin-right: 15px;
    color: #4caf50;
  }
  .text {
    font-size: 1rem;
    color: #555;
  }

  /* Estilos para la secci√≥n de los servicios */
  .services {
    padding: 1rem;
    background-color: #f5f5f5;
    text-align: center;
    display: flex;
    flex-direction: column;
    height: 100%; /* Asegura que el contenedor ocupe todo el espacio */
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    height: 100%; /* Asegura que el grid ocupe todo el espacio */
  }

  .service-card {
    background-color: #fff;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Distribuye los elementos dentro de las tarjetas */
    min-height: 0; /* Permite que las tarjetas se ajusten */
  }

  .services h2 {
    font-size: 2rem;
    margin: 10px;
    color: #333;
  }
  .services p {
    font-size: 1rem;
    color: #666;
  }
  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  }
  .service-card .service-icon {
    font-size: 2rem;
    margin-bottom: 15px;
    color: #4caf50; /* Color verde para los √≠conos */
  }
